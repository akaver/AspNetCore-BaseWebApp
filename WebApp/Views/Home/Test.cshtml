@model HomeTestViewModel

@{
    ViewBag.Title = "title " + Model.DecimalNumber;
}

<h2>This is test!</h2>



<form asp-action="Test" method="post">
    <div class="form-horizontal">
        <h4>User</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="form-group">
            <label asp-for="FirstName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        
        <div>@Model.DecimalNumber</div>
        <div class="form-group">
            <label asp-for="DecimalNumber" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DecimalNumber" class="form-control" />
                <span asp-validation-for="DecimalNumber" class="text-danger"></span>
            </div>
        </div>

        <div>@Model.DoubleNumber</div>
        <div class="form-group">
            <label asp-for="DoubleNumber" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DoubleNumber" class="form-control" />
                <span asp-validation-for="DoubleNumber" class="text-danger"></span>
            </div>
        </div>
        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
